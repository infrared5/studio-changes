{
  "name": "@studio/changes",
  "version": "1.0.1",
  "description": "Generate changes as part of npm version",
  "bin": {
    "changes": "bin/cmd.js"
  },
  "main": "lib/changes.js",
  "scripts": {
    "lint": "eslint .",
    "test": "mocha",
    "watch": "mocha --watch",
    "posttest": "npm run lint",
    "preversion": "npm test",
    "version": "bin/cmd.js",
    "postversion": "git push --follow-tags && npm publish"
  },
  "keywords": [
    "changes",
    "version",
    "release"
  ],
  "author": "Maximilian Antoni <mail@maxantoni.de> (http://maxantoni.de/)",
  "eslintConfig": {
    "extends": "@studio",
    "rules": {
      "no-sync": 0
    }
  },
  "dependencies": {
    "editor": "^1.0.0"
  },
  "devDependencies": {
    "@studio/eslint-config": "^1.0.0",
    "eslint": "^3.3.1",
    "mocha": "^3.0.2",
    "sinon": "^1.17.5"
  }
}
